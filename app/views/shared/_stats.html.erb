<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <a href="<%= user_goods_path(@user) %>">
    <strong id="good_num" class="stat">
      <%= Good.where(created_by_id: @user.id).count %>
    </strong>
    good
  </a>
</div>